<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdust.chatter.newActivity"
    android:id="@+id/newRelativeLayout">

    <include
        layout="@layout/app_bar"
        android:id="@+id/appBar"
        />

    <EditText
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:id="@+id/desBox"
        android:layout_below="@+id/appBar"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:hint="@string/new_post_hint"

        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postImage"
        android:layout_below="@+id/desBox"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:padding="10dp"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/gallery"
        android:layout_alignParentBottom="true"
        android:drawableStart="@drawable/ic_photo_album_white_48dp"
        android:paddingStart="65dp"
        android:paddingEnd="65dp"
        android:background="#F44336"
        android:gravity="center_vertical"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/camera"
        android:layout_alignTop="@+id/gallery"
        android:layout_toEndOf="@+id/gallery"
        android:drawableStart="@drawable/ic_photo_camera_white_48dp"
        android:paddingStart="65dp"
        android:paddingEnd="65dp"
        android:background="#536DFE"
        />

</RelativeLayout>
